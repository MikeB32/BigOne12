<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mike.bigone12.MainActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/img99"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        android:background="#321654"
        android:adjustViewBounds="false" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/img88"
        android:background="#321654"
        android:adjustViewBounds="false"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/img99"
        android:layout_toStartOf="@+id/img99" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/img77"
        android:background="#321654"
        android:adjustViewBounds="false"
        android:layout_alignTop="@+id/img88"
        android:layout_toRightOf="@+id/img99"
        android:layout_toEndOf="@+id/img99" />
</RelativeLayout>
